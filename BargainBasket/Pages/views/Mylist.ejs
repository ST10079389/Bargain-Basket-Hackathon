<!-- GROCERY LIST -->

<div class="master-container" style="margin-top: 170px;">
  <h1>Grocery List</h1>
  <div class="grocery-list">
    <% groceriesList.forEach(grocery => { %>
      <div class="grocery-item">
        <img src="<%= grocery.imageURL %>" alt="" class="item-image">
        <div class="item-details">
          <p><%= grocery.Name %></p>
          <h3><%= grocery.Price %></h3>
          <div class="Nquantity-button">
            <button type="button" class="decrease">-</button>
            <input class="quantity" name="productQuantity" value="1" min="1">
            <button type="button" class="increase">+</button>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
  <div class="total-price-container">
    <form action="/payments" method="post">
      <div class="total-price-box">
        <p>Total Savings: R<%= totalSavings.toFixed(2) %></p>
        <p>Total Price: R<%= totalPrice.toFixed(2) %></p>
      </div>
      <button type="submit" id="pay">Checkout</button>
    </form>
    <button class="checkout-btn">Email my Grocery List</button>
  </div>
  
</div>

<!-- footer -->
<div class="footercontainer">
    <section class="footer">
    
      <a href="HomePage.html">
          <img src="Images/bargain-basket-high-resolution-logo-color-on-transparent-background 2.png" alt="" height="90" width="500">
